"Encode
set encoding=utf-8
scriptencoding utf-8
set fileencoding=utf-8
set termencoding=utf-8
set ambiwidth=double

"File
set hidden
set autoread
set number

"Windoows
set clipboard=unnamed

"Tab & Indent
set expandtab
set tabstop=4
set softtabstop=4
set autoindent
set smartindent
set shiftwidth=4

"Cursor
set whichwrap=b,s,h,l,<,>,[,],~
set number
set ruler
set cursorline

"Code
set showmatch
set smarttab
